<%= form_for [:admin, @project] do |f| %>
  <div class="field">
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </div>
  <hr />
  <div class="field">
    <%= f.label :description %>:
    <%= f.text_area :description, :cols => 80, :rows => 7 %>  
  </div>
  <hr />
  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>
<% end %>